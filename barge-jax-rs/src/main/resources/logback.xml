<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} - {%X{self} %X{term} %X{state}} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="ERROR">
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="org.robotninjas">
    <level value="DEBUG"/>
  </logger>

</configuration>
